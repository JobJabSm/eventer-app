<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.eventer.app.AboutPage.CutoutTextView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:text="Eventer"
            app:foregroundColor="#69F0AE"
            app:font="roboto-mono-regular" />
        <com.eventer.app.common.FontTextView
            android:id="@+id/about_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="phone|email"
            app:weight="semibold"
            android:text="@string/AboutApp"
            android:paddingStart="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:paddingEnd="@dimen/padding_normal"
            android:paddingBottom="@dimen/spacing_large"
            android:background="@color/background_light"
            android:textColorHighlight="?android:colorPrimary"
            style="@style/Widget.Plaid.About" />

    </LinearLayout>

</ScrollView>
