<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SignIn" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#69F0AE</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
    </style>
    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/lightPink</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonBar" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>
    <style name="AppTheme.TranslucentBars">
        <item name="android:statusBarColor">@color/translucent_bars</item>
    </style>


    <color name="lightPink">#f8bbd0</color>
</resources>
