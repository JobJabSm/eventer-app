<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geteventer.eventer">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".EventerApp"
        >
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.TranslucentBars"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignIn.SignInSignUp"
            android:theme="@style/AppTheme.SignIn"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />

        <activity android:name=".Event.EventActivity"
            android:theme="@style/AppTheme.TranslucentBars"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>